<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.niyongsheng.persistence.dao.ActivityDao">

    <resultMap id="activityMap_1" type="Activity" autoMapping="true">
        <id property="id" column="id"/>
        <association property="isInGroup" javaType="boolean" column="{activityID = id, account = isInGroupAccount}" select="com.niyongsheng.persistence.dao.User_ActivityDao.selectIsInActivityByAccountAndActivityID"/>
        <association property="membersNum" javaType="integer" column="id" select="com.niyongsheng.persistence.dao.User_ActivityDao.selectActivityMembersNumByActivityID"/>
        <collection property="userList" column="id" select="com.niyongsheng.persistence.dao.User_ActivityDao.selectUsersByActivityID"/>
    </resultMap>
    <!-- 连表查询用户是否在群内isInGroup -->
    <select id="selectByFellowshipMultiTable" resultMap="activityMap_1">
        select *, #{isInGroupAccount} as isInGroupAccount
        from dcd_activity a
        inner join dcd_fellowship f
        on a.fellowship = f.id
        where a.fellowship = #{fellowship}
        order by a.isTop desc, a.id desc
    </select>

    <resultMap id="activityMap_2" type="Activity" autoMapping="true">
        <id property="id" column="id"/>
        <association property="isInGroup" javaType="boolean" column="{activityID = id, account = isInGroupAccount}" select="com.niyongsheng.persistence.dao.User_ActivityDao.selectIsInActivityByAccountAndActivityID"/>
        <association property="isClockedToday" javaType="boolean" column="{activityId = id, account = isInGroupAccount}" select="com.niyongsheng.persistence.dao.User_Activity_ClockDao.isClockedToday"/>
        <association property="membersNum" javaType="integer" column="id" select="com.niyongsheng.persistence.dao.User_ActivityDao.selectActivityMembersNumByActivityID"/>
        <collection property="userList" column="id" select="com.niyongsheng.persistence.dao.User_ActivityDao.selectUsersByActivityID"/>
        <collection property="clockedUserList" column="id" select="com.niyongsheng.persistence.dao.User_Activity_ClockDao.selectTodayClockedUsersByActivityID"/>
        <collection property="unclockUserList" column="id" select="com.niyongsheng.persistence.dao.User_Activity_ClockDao.selectTodayUnclockUsersByActivityID"/>
    </resultMap>

    <select id="selectByTypeAndFellowshipMultiTable" resultMap="activityMap_2">
        select *, #{isInGroupAccount} as isInGroupAccount
        from dcd_activity a
        inner join dcd_fellowship f
        on a.fellowship = f.id
        where a.fellowship = #{fellowship} and a.activityType = #{activityType}
        order by a.isTop desc, a.id desc
    </select>

</mapper>